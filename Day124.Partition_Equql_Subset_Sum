    bool equalPartition(vector<int>& arr) {
        // code here
//  using DP
        int sum=0;
        for(int i=0;i<arr.size();i++)
        {
            sum+=arr[i];
            
        }
        if(sum%2!=0)
        return false;
        int target=sum/2;
        vector<bool>dp(target+1,0);
        dp[0]=true;
        for(int nums:arr)
        {
            for(int i=target;i>=nums;i--)
            {
                dp[i]=dp[i]||dp[i-nums];
            }
        }
        return dp[target];
        
        // // without DP
