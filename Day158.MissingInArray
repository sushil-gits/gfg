Actual sum = 1 + 2 + 4 + 5 + 6 = 18

Missing number = 21 - 18 = 3

Output:
3



//{ Driver Code Starts
#include <bits/stdc++.h>
using namespace std;


// } Driver Code Ends

class Solution {
  public:
    int missingNum(vector<int>& arr) {
        // code here
        int n=arr.size();
    long long sum=0,mis=0;
    long long fullsum=(long long)(n+1)*(n+2)/2;
    for(int i=0;i<n;i++)
    {
        sum+=arr[i];
    }
    mis=fullsum-sum;
    return mis;
    }
};


//{ Driver Code Starts.

int main() {
    int t;
    cin >> t;
    cin.ignore(); // to ignore the newline after the integer input
    while (t--) {
        int n;
        vector<int> a;
        string input;

        // Input format: first number n followed by the array elements
        getline(cin, input);
        stringstream ss(input);
        int num;
        while (ss >> num)
            a.push_back(num);

        Solution obj;
        cout << obj.missingNum(a) << endl;
        cout << "~\n";
    }

    return 0;
}

// } Driver Code Ends
